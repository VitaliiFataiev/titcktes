import json

def save_load_to_json(filename, mode, data=None):
    try:
        if mode == "save":
            with open(filename, 'w') as file:
                json.dump(data, file, indent=4)
            print(f"Дані було успішно збережено у файл {filename}")
        elif mode == "load":
            with open(filename, 'r') as file:
                return json.load(file)
            print(f"Дані було успішно завантажено з файлу {filename}")
    except FileNotFoundError:
        print(f"Файл {filename} не знайдено. Немає даних для завантаження.")
    except Exception as e:
        print(f"Помилка: {e}")

